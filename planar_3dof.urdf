<?xml version="1.0"?>
<robot name="planar_3dof">

  <!-- MEASUREMENTS: 
       L1 = 1.0m, L2 = 1.0m, L3 = 1.0m 
  -->

  <!-- MATERIALS -->
  <material name="dark_grey"><color rgba="0.2 0.2 0.2 1"/></material>
  <material name="silver"><color rgba="0.7 0.7 0.7 1"/></material>
  <material name="orange"><color rgba="1.0 0.55 0.0 1"/></material>
  <material name="black"><color rgba="0 0 0 1"/></material>

  <!-- BASE: Pedestal -->
  <link name="base">
    <visual>
      <origin xyz="0 0 -0.05" rpy="0 0 0"/>
      <geometry><cylinder length="0.1" radius="0.15"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 -0.05" rpy="0 0 0"/>
      <geometry><cylinder length="0.1" radius="0.15"/></geometry>
    </collision>
    <inertial>
      <mass value="10.0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>

  <!-- JOINT 1 -->
  <joint name="joint1" type="revolute">
    <parent link="base"/>
    <child link="link1"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="100" velocity="5"/>
  </joint>

  <!-- LINK 1 -->
  <link name="link1">
    <visual>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
      <geometry><cylinder length="0.08" radius="0.08"/></geometry>
      <material name="orange"/>
    </visual>
    <visual>
      <origin xyz="0.5 0 0.04" rpy="0 1.5708 0"/>
      <geometry><cylinder length="1.0" radius="0.04"/></geometry>
      <material name="silver"/>
    </visual>
    <collision>
      <origin xyz="0.5 0 0.04" rpy="0 1.5708 0"/>
      <geometry><cylinder length="1.0" radius="0.04"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0.5 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>

  <!-- JOINT 2 -->
  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="1.0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-2.5" upper="2.5" effort="100" velocity="5"/>
  </joint>

  <!-- LINK 2 -->
  <link name="link2">
    <visual>
      <origin xyz="0 0 0.06" rpy="0 0 0"/>
      <geometry><cylinder length="0.06" radius="0.07"/></geometry>
      <material name="orange"/>
    </visual>
    <visual>
      <origin xyz="0.5 0 0.06" rpy="0 1.5708 0"/>
      <geometry><cylinder length="1.0" radius="0.035"/></geometry>
      <material name="dark_grey"/>
    </visual>
    <collision>
      <origin xyz="0.5 0 0.06" rpy="0 1.5708 0"/>
      <geometry><cylinder length="1.0" radius="0.035"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0.5 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>

  <!-- JOINT 3 -->
  <joint name="joint3" type="revolute">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="1.0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="100" velocity="5"/>
  </joint>

  <!-- LINK 3 -->
  <link name="link3">
    <visual>
      <origin xyz="0 0 0.06" rpy="0 0 0"/>
      <geometry><cylinder length="0.06" radius="0.05"/></geometry>
      <material name="orange"/>
    </visual>
    <visual>
      <origin xyz="0.5 0 0.06" rpy="0 1.5708 0"/>
      <geometry><cylinder length="1.0" radius="0.025"/></geometry>
      <material name="silver"/>
    </visual>
    
    <!-- Pen Body -->
    <visual>
      <origin xyz="1.0 0 0.03" rpy="0 0 0"/>
      <geometry><cylinder length="0.15" radius="0.01"/></geometry>
      <material name="black"/>
    </visual>
    
    <!-- Pen Tip (FIXED: Changed cone to thin cylinder) -->
    <visual>
      <origin xyz="1.0 0 -0.05" rpy="0 0 0"/> 
      <geometry><cylinder radius="0.002" length="0.05"/></geometry>
      <material name="black"/>
    </visual>

    <collision>
      <origin xyz="0.5 0 0.06" rpy="0 1.5708 0"/>
      <geometry><cylinder length="1.0" radius="0.025"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0.5 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.05" ixy="0" ixz="0" iyy="0.05" iyz="0" izz="0.05"/>
    </inertial>
  </link>

</robot>